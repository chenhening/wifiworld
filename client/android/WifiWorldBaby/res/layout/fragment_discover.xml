<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <include layout="@layout/header_setting" android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/ll_discover_root"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:background="@color/common_div_line"
        android:orientation="vertical" >

        <FrameLayout
            android:id="@+id/fl_ads_banner"
            android:layout_width="match_parent"
            android:layout_height="60dp" >

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/settings_group_bg"
                android:orientation="vertical"
                android:visibility="visible" >

                <RelativeLayout
                    android:id="@+id/rl_wifi_provider"
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:background="@drawable/settings_item_radius_bg_selector"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp" >

                    <ImageView
                        android:id="@+id/iv_top_provider"
                        android:layout_width="80px"
                        android:layout_height="80px"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="8dp"
                        android:contentDescription="@string/app_name"
                        android:gravity="center_vertical"
                        android:src="@drawable/my_message_logo" />

                    <TextView
                        android:id="@+id/tv_my_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/iv_top_provider"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="@string/str_top_provider"
                        android:textColor="@color/setting_txt"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/iv_setting_system_msg_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/wifi_diglist_selector"
                        android:contentDescription="@string/app_name"
                        android:gravity="center_vertical" />

                    <ImageView
                        android:id="@+id/iv_setting_system_msg_new"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="12dp"
                        android:layout_toLeftOf="@id/iv_setting_system_msg_more"
                        android:background="@drawable/common_new_msg_ico"
                        android:contentDescription="@string/app_name"
                        android:gravity="center_vertical"
                        android:visibility="invisible" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@drawable/settings_group_bg"
                android:orientation="vertical"
                android:visibility="visible" >

                <RelativeLayout
                    android:id="@+id/rl_wifi_user"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/settings_item_radius_bg_selector"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:tag="rlSettingInAccount" >

                    <ImageView
                        android:id="@+id/iv_in_account_logo"
                        android:layout_width="80px"
                        android:layout_height="80px"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="8dp"
                        android:contentDescription="@string/app_name"
                        android:gravity="center_vertical"
                        android:src="@drawable/my_in_account_logo" />

                    <TextView
                        android:id="@+id/tv_in_account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/iv_in_account_logo"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="@string/str_top_wifiuser"
                        android:textColor="@color/setting_txt"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/iv_in_account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/wifi_diglist_selector"
                        android:contentDescription="@string/app_name"
                        android:gravity="center_vertical"
                        android:tag="ivSettingInAccount"
                        android:visibility="visible" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@drawable/settings_group_bg"
                android:orientation="vertical"
                android:visibility="visible" >

                <RelativeLayout
                    android:id="@+id/people_using"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/settings_item_radius_bg_selector"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:tag="rlSettingInAccount" >

                    <ImageView
                        android:id="@+id/people_using_logo"
                        android:layout_width="80px"
                        android:layout_height="80px"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="8dp"
                        android:contentDescription="@string/app_name"
                        android:gravity="center_vertical"
                        android:src="@drawable/icon_person_center_fans" />

                    <TextView
                        android:id="@+id/people_using_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/people_using_logo"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="@string/str_people_using"
                        android:textColor="@color/setting_txt"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/people_using_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/wifi_diglist_selector"
                        android:contentDescription="@string/app_name"
                        android:gravity="center_vertical"
                        android:tag="ivSettingInAccount"
                        android:visibility="visible" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@drawable/settings_group_bg"
                android:orientation="vertical"
                android:visibility="visible" >

                <RelativeLayout
                    android:id="@+id/people_playing"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/settings_item_radius_bg_selector"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:tag="rlSettingInAccount" >

                    <ImageView
                        android:id="@+id/people_playing_logo"
                        android:layout_width="80px"
                        android:layout_height="80px"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="8dp"
                        android:contentDescription="@string/app_name"
                        android:gravity="center_vertical"
                        android:src="@drawable/icon_labby_game" />

                    <TextView
                        android:id="@+id/people_using_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/people_playing_logo"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="@string/str_people_playing"
                        android:textColor="@color/setting_txt"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/people_playing_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/wifi_diglist_selector"
                        android:contentDescription="@string/app_name"
                        android:gravity="center_vertical"
                        android:tag="ivSettingInAccount"
                        android:visibility="visible" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@drawable/settings_group_bg"
                android:orientation="vertical"
                android:visibility="visible" >

                <RelativeLayout
                    android:id="@+id/people_watching"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/settings_item_radius_bg_selector"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:tag="rlSettingInAccount" >

                    <ImageView
                        android:id="@+id/people_watching_logo"
                        android:layout_width="80px"
                        android:layout_height="80px"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="8dp"
                        android:contentDescription="@string/app_name"
                        android:gravity="center_vertical"
                        android:src="@drawable/icon_labby_soft" />

                    <TextView
                        android:id="@+id/people_watching_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/people_watching_logo"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="@string/str_people_watching"
                        android:textColor="@color/setting_txt"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/people_watching_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/wifi_diglist_selector"
                        android:contentDescription="@string/app_name"
                        android:gravity="center_vertical"
                        android:tag="ivSettingInAccount"
                        android:visibility="visible" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@drawable/settings_group_bg"
                android:orientation="vertical"
                android:visibility="visible" >

                <RelativeLayout
                    android:id="@+id/people_buying"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/settings_item_radius_bg_selector"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:tag="rlSettingInAccount" >

                    <ImageView
                        android:id="@+id/people_buying_logo"
                        android:layout_width="80px"
                        android:layout_height="80px"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="8dp"
                        android:contentDescription="@string/app_name"
                        android:gravity="center_vertical"
                        android:src="@drawable/ic_shop" />

                    <TextView
                        android:id="@+id/people_buying_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/people_buying_logo"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="@string/str_people_buying"
                        android:textColor="@color/setting_txt"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/people_buying_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/wifi_diglist_selector"
                        android:contentDescription="@string/app_name"
                        android:gravity="center_vertical"
                        android:tag="ivSettingInAccount"
                        android:visibility="visible" />
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>




    </LinearLayout>


</LinearLayout>