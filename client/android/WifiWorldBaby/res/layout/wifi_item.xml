<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wifi_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="center"
    android:paddingLeft="15dip"
    android:paddingTop="15dip"
    android:paddingBottom="15dip" >
        
	<ImageView
	    android:id="@+id/wifi_icon"
	    android:layout_width="30dip"
	    android:layout_height="30dip"
	    android:layout_gravity="center_vertical" />
	
	<TextView
	    android:id="@+id/wifi_name"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center_vertical"
	    android:paddingLeft="15dip"
	    android:textColor="@color/black"
	    android:textSize="22sp" />

	<LinearLayout
	    android:id="@+id/wifi_status"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center|right"
	    android:gravity="right"
	    android:orientation="horizontal" >

	    <LinearLayout
	        android:id="@+id/wifi_tail"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:orientation="vertical" >

	        <ImageView
	            android:id="@+id/wifi_status_icon"
	            android:layout_width="20dip"
	            android:layout_height="20dip"
	            android:src="@drawable/lock_wifi_signal_icon3" />

	        <TextView
	            android:id="@+id/wifi_status_digit"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="-4dip"
	            android:text="100%"
	            android:textColor="@color/darkgrey"
	            android:textSize="10sp" />
	    </LinearLayout>
	    
	    <Button
	        android:id="@+id/wifi_details_btn"
	        android:layout_width="40dp"
	        android:layout_height="40dp"
	        android:focusable="false"
	        android:background="@drawable/wifi_more" />
	</LinearLayout>

</LinearLayout>
