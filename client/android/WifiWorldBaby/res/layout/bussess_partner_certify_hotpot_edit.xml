<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/color_main_bg"
    android:orientation="vertical" >

    <include layout="@layout/header_setting" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/person_cener_item_bg"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/merchant_head"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dimen_65_dip"
            android:background="@drawable/bg_merchant_certify_introduce_repeat"
            android:paddingLeft="@dimen/dimen_15_dip"
            android:paddingRight="@dimen/dimen_15_dip"
            android:scaleType="center"
            android:src="@drawable/img_merchant_certify_end" />

        <LinearLayout
            android:id="@+id/merchant_wifi_content"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dimen_40_dip"
            android:layout_marginLeft="@dimen/dimen_15_dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView"
                android:layout_width="@dimen/dimen_85_dip"
                android:layout_height="fill_parent"
                android:drawableLeft="@drawable/img_merchant_certify_mark"
                android:drawablePadding="@dimen/dimen_5_dip"
                android:gravity="center_vertical"
                android:text="Wi-Fi名称"
                android:textColor="@color/color_main_text"
                android:textSize="@dimen/font_main_big" />

            <TextView
                android:id="@+id/edt_ssid"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="1.0dip"
                android:layout_weight="1.0"
                android:background="#ffffffff"
                android:gravity="center_vertical"
                android:hint="请选择热点"
                android:text=""
                android:textColor="@color/color_main_text"
                android:textSize="@dimen/font_main_big" />

            <TextView
                android:id="@+id/txt_select"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:background="#ff03a5a7"
                android:gravity="center"
                android:paddingLeft="@dimen/dimen_15_dip"
                android:paddingRight="@dimen/dimen_15_dip"
                android:text="选择热点"
                android:textColor="#ffffffff"
                android:textSize="@dimen/font_main_big" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:layout_marginLeft="@dimen/dimen_15_dip"
            android:background="#ffe4e4e7" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dimen_40_dip"
            android:layout_marginLeft="@dimen/dimen_15_dip"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="@dimen/dimen_85_dip"
                android:layout_height="fill_parent"
                android:drawableLeft="@drawable/img_merchant_certify_mark"
                android:drawablePadding="@dimen/dimen_5_dip"
                android:gravity="center_vertical"
                android:text="密码"
                android:textColor="@color/color_main_text"
                android:textSize="@dimen/font_main_big" />

            <EditText
                android:id="@+id/edt_pwd"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="1.0dip"
                android:layout_weight="1.0"
                android:background="#ffffffff"
                android:editable="false"
                android:gravity="center_vertical"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:text=""
                android:textColor="@color/color_main_text"
                android:textSize="@dimen/font_main_big" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dimen_10_dip"
        android:paddingLeft="@dimen/dimen_14_dip"
        android:paddingRight="@dimen/dimen_15_dip"
        android:paddingTop="@dimen/dimen_5_dip"
        android:text="请先选择你的门店Wi-Fi热点，准确填写密码，并在热点覆盖范围内提交"
        android:textColor="@color/color_gray"
        android:textSize="@dimen/font_main_small" />

</LinearLayout>