<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg" >

    <include
        android:id="@+id/title_bar_replacement"
        layout="@layout/header_setting"
        android:visibility="visible" />

    <FrameLayout
        android:id="@+id/knock_step_title"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:layout_below="@+id/title_bar_replacement"
        android:gravity="center_vertical" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50.0dip"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_knock_step_1"
                android:layout_width="124.0dip"
                android:layout_height="50.0dip"
                android:layout_gravity="left"
                android:background="@drawable/iv_step1" />

            <ImageView
                android:id="@+id/iv_knock_step_2"
                android:layout_width="139.0dip"
                android:layout_height="50.0dip"
                android:layout_gravity="top"
                android:layout_marginLeft="110.0dip"
                android:background="@drawable/iv_step2" />

            <ImageView
                android:id="@+id/iv_knock_step_3"
                android:layout_width="125.0dip"
                android:layout_height="50.0dip"
                android:layout_gravity="right"
                android:background="@drawable/iv_step3" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl"
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_move33"
                android:layout_width="139.0dip"
                android:layout_height="50.0dip"
                android:layout_marginLeft="-16.0dip"
                android:background="@drawable/question_bg" 
                android:visibility="visible"/>
        </FrameLayout>

        <LinearLayout
            android:id="@+id/step"
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/ll_step_1"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:gravity="bottom|center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_step_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4.0dip"
                    android:gravity="bottom"
                    android:text="问题"
                    android:textColor="@color/white"
                    android:textSize="15.0sp" />

                <ImageView
                    android:id="@+id/iv_step_1"
                    android:layout_width="11.0dip"
                    android:layout_height="27.0dip"
                    android:layout_marginBottom="10.0dip"
                    android:layout_marginLeft="10.0dip"
                    android:background="@drawable/knock_question1_hover" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_step_2"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:gravity="bottom|center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_step_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4.0dip"
                    android:gravity="bottom"
                    android:text="问题"
                    android:textColor="@color/white"
                    android:textSize="15.0sp" />

                <ImageView
                    android:id="@+id/iv_step_2"
                    android:layout_width="17.0dip"
                    android:layout_height="27.0dip"
                    android:layout_marginBottom="10.0dip"
                    android:layout_marginLeft="10.0dip"
                    android:background="@drawable/knock_question2" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_step_3"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:gravity="bottom|center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_step_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4.0dip"
                    android:gravity="bottom"
                    android:text="问题"
                    android:textColor="@color/white"
                    android:textSize="15.0sp" />

                <ImageView
                    android:id="@+id/iv_step_3"
                    android:layout_width="17.0dip"
                    android:layout_height="27.0dip"
                    android:layout_marginBottom="10.0dip"
                    android:layout_marginLeft="10.0dip"
                    android:background="@drawable/knock_question3" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/knock_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/knock_step_title" />

</RelativeLayout>