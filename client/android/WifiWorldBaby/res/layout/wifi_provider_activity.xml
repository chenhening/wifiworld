<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/settings_group_bg"
    android:orientation="vertical"
    android:scrollbarStyle="insideInset" >

    <include layout="@layout/header_setting" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:scrollbarStyle="insideInset" >

        <LinearLayout
            android:id="@+id/provider_table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="visible" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_wifi_ssid"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:drawableLeft="@drawable/my_suggestion_logo"
                    android:drawablePadding="6dp"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="@string/wifissid"
                    android:textColor="@color/setting_txt"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/et_wifi_ssid"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.6"
                    android:background="#00000000"
                    android:gravity="left|center_vertical"
                    android:hint="@string/sms_check_num"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLength="20"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/black"
                    android:textColorHint="@color/darkkhaki"
                    android:textColorLink="@color/black"
                    android:textSize="17sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height"
                android:background="@color/common_div_line"
                android:contentDescription="@string/app_name" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_wifi_psw"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:drawableLeft="@drawable/my_suggestion_logo"
                    android:drawablePadding="6dp"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="@string/wifipsw"
                    android:textColor="@color/setting_txt"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/et_wifi_psw"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.6"
                    android:background="#00000000"
                    android:gravity="left|center_vertical"
                    android:hint="@string/sms_check_num"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLength="20"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/black"
                    android:textColorHint="@color/darkkhaki"
                    android:textColorLink="@color/black"
                    android:textSize="17sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height"
                android:background="@color/common_div_line"
                android:contentDescription="@string/app_name" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_wifi_asia"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:drawableLeft="@drawable/my_suggestion_logo"
                    android:drawablePadding="6dp"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="@string/wifiasia"
                    android:textColor="@color/setting_txt"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/et_wifi_asia"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.6"
                    android:background="#00000000"
                    android:gravity="left|center_vertical"
                    android:hint="@string/sms_check_num"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLength="20"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/black"
                    android:textColorHint="@color/darkkhaki"
                    android:textColorLink="@color/black"
                    android:textSize="17sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height"
                android:background="@color/common_div_line"
                android:contentDescription="@string/app_name" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_wifi_logo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:drawableLeft="@drawable/my_suggestion_logo"
                    android:drawablePadding="6dp"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="@string/wifilogo"
                    android:textColor="@color/setting_txt"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/et_wifi_logo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.6"
                    android:background="#00000000"
                    android:contentDescription="@string/app_name"
                    android:gravity="left|center_vertical"
                    android:src="@drawable/ic_launcher" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height"
                android:background="@color/common_div_line"
                android:contentDescription="@string/app_name" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_wifi_info"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:drawableLeft="@drawable/my_suggestion_logo"
                    android:drawablePadding="6dp"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="@string/wifiinfo"
                    android:textColor="@color/setting_txt"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/et_wifi_info"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.6"
                    android:background="#00000000"
                    android:gravity="left|center_vertical"
                    android:hint="@string/sms_check_num"
                    android:imeOptions="actionNext"
                    android:maxLength="140"
                    android:maxLines="5"
                    android:minLines="3"
                    android:scrollHorizontally="false"
                    android:scrollbarAlwaysDrawVerticalTrack="false"
                    android:text=""
                    android:textColor="@color/black"
                    android:textColorHint="@color/darkkhaki"
                    android:textColorLink="@color/black"
                    android:textSize="17sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height"
                android:background="@color/common_div_line"
                android:contentDescription="@string/app_name" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_wifi_geo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:drawableLeft="@drawable/my_suggestion_logo"
                    android:drawablePadding="6dp"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="@string/wifigeo"
                    android:textColor="@color/setting_txt"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/et_wifi_geo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.6"
                    android:background="#00000000"
                    android:gravity="left|center_vertical"
                    android:hint="@string/sms_check_num"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/black"
                    android:textColorHint="@color/darkkhaki"
                    android:textColorLink="@color/black"
                    android:textSize="17sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height"
                android:background="@color/common_div_line"
                android:contentDescription="@string/app_name" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height"
                android:background="@color/common_div_line"
                android:contentDescription="@string/app_name" />

            <LinearLayout
                android:id="@+id/button_login"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/login_bottom_btn_selector"
                android:gravity="center"
                android:minHeight="39dp" >

                <TextView
                    android:id="@+id/tv_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="false"
                    android:text="@string/login_login"
                    android:textColor="#E22B2B"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <com.anynet.wifiworld.view.AnimationDot
                    android:id="@+id/login_animation_dot"
                    android:layout_width="20dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dip"
                    android:clickable="true"
                    android:gravity="left|bottom"
                    android:textColor="#E22B2B"
                    android:textSize="19sp"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>