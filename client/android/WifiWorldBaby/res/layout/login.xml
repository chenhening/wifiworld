<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sl_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="78dp"
                 android:layout_gravity="center_horizontal"
                android:background="@drawable/login_logo" />

       
        

        <!-- haoyu1987@163.com  wanghaiqiang_318   18507557677  hebgydx$xlwl 779812560@qq.com  a779812560-->

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="37dp"
            android:layout_marginRight="37dp"
            android:layout_marginTop="33dp" >

            <EditText
                android:id="@+id/tv_login_account"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="#00000000"
                android:gravity="left|center_vertical"
                android:hint="@string/login_account"
                android:textColorHint="@color/white"
                android:imeOptions="actionNext"
                android:inputType="textUri"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/login_tv_txt"
                android:textSize="17sp" />

            <Button
                android:id="@+id/bt_clear_login_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:background="@drawable/login_edit_text_clear_btn_selector"
                android:visibility="invisible" />
        </FrameLayout>
        
        
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="37dp"
                android:layout_marginRight="37dp"
                 android:layout_gravity="center_horizontal"
                android:background="@drawable/login_line" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="37dp"
            android:layout_marginRight="37dp"
            android:layout_marginTop="11dp" >

            <EditText
                android:id="@+id/tv_login_passwd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="#00000000"
                android:gravity="left|center_vertical"
                android:hint="@string/login_passwd"
                android:textColorHint="@color/white"
                android:text=""
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="@color/login_tv_txt"
                android:textSize="17sp" />

            <Button
                android:id="@+id/bt_clear_login_passwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:background="@drawable/login_edit_text_clear_btn_selector"
                android:visibility="invisible" />
        </FrameLayout>
        
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="37dp"
                android:layout_marginRight="37dp"
                 android:layout_gravity="center_horizontal"
                android:background="@drawable/login_line" />
            
            
            <LinearLayout
            android:id="@+id/ll_login_errortip"
            android:layout_width="match_parent"
            android:layout_height="48dp"      
            android:background="#00000000"
             android:visibility="invisible" 
             android:gravity="center"
            android:orientation="horizontal" >
            
                
             <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"      
             android:visibility="visible" 
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:layout_gravity="center_vertical"
                android:background="@drawable/login_err_remind" />

            <TextView
                android:id="@+id/tv_login_errortip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_gravity="center_vertical"
                android:clickable="false"
                android:focusable="false"
                android:text="@string/error_tip_test"
                android:textColor="@color/login_error_txt"
                android:textSize="15sp"
                android:visibility="visible" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_login"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:minHeight="39dp"
            android:layout_gravity="center_horizontal"  
            android:background="@drawable/login_bottom_btn_selector"
            android:gravity="center" >

            <TextView
                android:id="@+id/tv_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:focusable="false"
                android:text="@string/login_login"
                android:textColor="#E22B2B"
                android:textSize="19sp"
                android:textStyle="bold" />
            
               <com.xunlei.crystalandroid.view.AnimationDot
                android:id="@+id/login_animation_dot"
                android:layout_width="20dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dip"
                android:clickable="false"
                android:gravity="left|bottom"
                android:textColor="#E22B2B"
                android:textSize="19sp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>