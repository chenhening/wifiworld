<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" xmlns:app="http://schemas.android.com/apk/res/com.anynet.wifiworld">

    <include layout="@layout/header_setting" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.03"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView1"
            android:layout_centerHorizontal="true"
            android:text="网络宝：您身边能赚钱的网络"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_app_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView2"
            android:layout_alignBottom="@+id/textView2"
            android:layout_alignRight="@+id/textView1"
            android:layout_toRightOf="@+id/textView2"
            android:hint="v0.0.0"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView1"
            android:layout_below="@+id/textView1"
            android:layout_marginTop="14dp"
            android:text="当前版本号："
            android:textSize="16sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.25"
        android:orientation="vertical" >

        <com.anynet.wifiworld.view.SettingItemView
            android:id="@+id/SettingItemView01"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dimen_45_dip"
            app:icon="@drawable/icon_person_center_attention"
            app:label="好评支持一下"
            app:showTopDivider="true"
            app:subLabel="和更多的朋友分享" >
        </com.anynet.wifiworld.view.SettingItemView>

        <com.anynet.wifiworld.view.SettingItemView
            android:id="@+id/fensi_layout"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dimen_45_dip"
            app:icon="@drawable/icon_person_center_fans"
            app:label="检查更新"
            app:showTopDivider="true" >
        </com.anynet.wifiworld.view.SettingItemView>

        <com.anynet.wifiworld.view.SettingItemView
            android:id="@+id/slv_my_attention"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dimen_45_dip"
            app:icon="@drawable/icon_person_center_attention"
            app:label="服务协议"
            app:showTopDivider="true" >
        </com.anynet.wifiworld.view.SettingItemView>

    </LinearLayout>

</LinearLayout>