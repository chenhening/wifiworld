<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg"
    android:orientation="vertical" >

    <include layout="@layout/header_setting" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:scrollbars="none"
        android:background="@color/common_div_line" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/red"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/red"
                    android:paddingLeft="11dp"
                    android:paddingRight="12dp"
                    android:visibility="gone"
                    android:paddingTop="14dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="累计入账（个）"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <ImageButton
                        android:id="@+id/ib_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/btn_info_selector"
                        android:contentDescription="@string/app_name"
                        android:tag="ibInfo"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/his_red_crystal_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="9dp"
                        android:layout_toLeftOf="@id/ib_info"
                        android:tag="hisRedCrystalNum"
                        android:text="--"
                        android:textColor="@color/white"
                        android:textSize="16dp" />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:paddingLeft="11dp"
                    android:paddingRight="12dp"
                    android:text="账户余额（个）"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <!-- 今日入账的红水晶数量 -->

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="34dp"
                    android:paddingTop="30dp"
                    android:tag="tvCrystalCanUse"
                    android:text="--"
                    android:textColor="@color/white"
                    android:textSize="73sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="31dp"
                    android:tag="tvWechatPkg"
                    android:text="可提现--元"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/crystal_bg_sawtooth"
                android:contentDescription="@string/app_name" />

            <TextView

                android:id="@+id/et_remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginBottom="31dp"
                android:layout_marginTop="38dp"
                android:background="#00000000"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:tag="etRemark"
                android:lineSpacingMultiplier="1.1"
                android:textIsSelectable="true"
                android:text="@string/remark"
                android:textColor="#A7A7A7"
                android:textSize="14dp" />
                />

            <LinearLayout
                android:id="@+id/ll_getpkg"
                android:layout_width="287dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/login_fail_btn_selector"
                android:gravity="center"
                android:tag="llGetPkg" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:focusable="false"
                    android:text="提现"
                    android:textColor="#555555"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>