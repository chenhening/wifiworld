<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <include
        android:id="@+id/title_bar_replacement"
        layout="@layout/header_setting" />

    <ListView
        android:id="@+id/lv_find_thread"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_weight="2.62" >

    </ListView>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.100000024dip"
        android:layout_marginBottom="1dp"
        android:background="@color/color_blue_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_weight="0.4"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@color/goldenrod"
            android:gravity="left|center"
            android:text="参与寻找Wi-Fi主人计划，提供线索就有奖励。快来增加一条线索吧......" />

        <LinearLayout
            android:id="@+id/wifi_comment_input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dimen_3_dip"
            android:paddingLeft="@dimen/dimen_5_dip"
            android:paddingRight="@dimen/dimen_5_dip"
            android:paddingTop="@dimen/dimen_3_dip" >

            <EditText
                android:id="@+id/wifi_input_frame"
                android:layout_width="0.0dip"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="3"
                android:background="@color/body_background"
                android:gravity="center_vertical"
                android:hint="输入评论"
                android:maxLength="30"
                android:maxLines="4"
                android:textColor="@color/font_color_black"
                android:textColorHint="@color/edt_hint_color"
                android:textSize="@dimen/font_main_big" >
            </EditText>

            <LinearLayout
                android:id="@+id/wifi_comment_send"
                android:layout_width="0.0dip"
                android:layout_height="@dimen/dimen_40_dip"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.0"
                android:background="@drawable/umeng_common_gradient_orange"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/tv_button_sms"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:clickable="false"
                    android:focusable="false"
                    android:gravity="center"
                    android:text="发送"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/font_main_title"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>