<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wifi_details_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/wifi_details_header" />

    <LinearLayout
        android:id="@+id/wifi_account_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/brown" >
        
        
        <TextView
            android:id="@+id/wifi_account_rank"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_gravity="right"
            android:text="排名：--"
            android:textSize="12sp"
            android:textColor="@color/darkgray"
            android:layout_marginRight="10dp" />

        <ImageView
            android:id="@+id/wifi_account_portral"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_default_portal" />
        
        <LinearLayout
            android:id="@+id/wifi_account_stars"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <RatingBar
                android:id="@+id/wifi_account_rating"
                style="?android:attr/ratingBarStyleIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5" />
            
            <TextView
                android:id="@+id/wifi_account_star_num"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:gravity="center"
                android:text="--" />
        </LinearLayout>
        
	    <LinearLayout
	        android:id="@+id/wifi_connect_parameters"
	        android:layout_width="match_parent"
	        android:layout_height="50dp"
	        android:orientation="horizontal"
	        android:background="@color/white" >
	        
	        <LinearLayout
	            android:id="@+id/wifi_connect_times_layout"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:layout_weight="1"
	            android:orientation="vertical" >
	            
	            <TextView
	                android:id="@+id/wifi_connect_times_tag"
	                android:layout_width="match_parent"
	                android:layout_height="25dp"
	                android:gravity="center"
	                android:text="连接次数" />
	            
	            <TextView
                    android:id="@+id/wifi_connect_times_num"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:text="--次"
                    android:textSize="12sp"
                    android:textColor="@color/darkgray" />
	        </LinearLayout>
	        
	        <View
	            android:layout_width="1px"  
	            android:layout_height="match_parent" 
	            android:background="?android:attr/listDivider" />
	        
	        <LinearLayout
                android:id="@+id/wifi_connect_time_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical" >
                
                <TextView
                    android:id="@+id/wifi_connect_time_tag"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:text="连接时长" />
                
                <TextView
                    android:id="@+id/wifi_connect_time_num"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:text="--小时"
                    android:textSize="12sp"
                    android:textColor="@color/darkgray" />
            </LinearLayout>
	        
	        <View
	            android:layout_width="1px"  
	            android:layout_height="match_parent" 
	            android:background="?android:attr/listDivider" />
	        
	        <LinearLayout
                android:id="@+id/wifi_connect_strength_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical" >
                
                <TextView
                    android:id="@+id/wifi_connect_strength_tag"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:text="信号强度" />
                
                <TextView
                    android:id="@+id/wifi_connect_strength_num"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:text="--%"
                    android:textSize="12sp"
                    android:textColor="@color/darkgray" />
            </LinearLayout>
	    </LinearLayout>
	    
	    <View
                android:layout_width="match_parent"  
                android:layout_height="1px" 
                android:background="?android:attr/listDivider" />
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/wifi_connect_security_level"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/wifi_connect_security_tag"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:text="安全等级：" />

        <TextView
            android:id="@+id/wifi_connect_security_num"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="5.0" />

        <LinearLayout
            android:id="@+id/wifi_connect_security_more_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|center" >

            <ImageView
                android:id="@+id/wifi_connect_security_more"
                android:layout_width="20dp"
                android:layout_height="15dp"
                android:paddingRight="10dp"
                android:src="@drawable/wifi_diglist_press" />
        </LinearLayout>
    </LinearLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/brown" />
    
    <LinearLayout
        android:id="@+id/wifi_connect_comments_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:orientation="vertical" >
        
        <TextView
            android:id="@+id/wifi_connect_comments_tag"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:text="最新评论：" />
        
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/brown" />
        
        <ListView
	        android:id="@+id/wifi_list_comments"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:fadingEdge="none"
	        android:cacheColorHint="#00000000" >
	    </ListView>

    </LinearLayout>

</LinearLayout>