<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wifi_louder_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/wifi_louder_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/wifi_louder_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:contentDescription="@null"
            android:src="@drawable/naicha" />

        <TextView
            android:id="@+id/wifi_louder_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:gravity="center"
            android:text="小天是我见过的最单纯善良的女孩"
            android:textColor="@color/knock_question_click_color" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/darkgray" />

    <FrameLayout
        android:id="@+id/wifi_comments_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true" >

        <ListView
            android:id="@+id/wifi_list_comments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:cacheColorHint="#00000000"
            android:fadingEdge="vertical" >
        </ListView>
        
        <LinearLayout
            android:id="@+id/wifi_comment_send"
            android:layout_width="80dp"
            android:layout_height="@dimen/dimen_40_dip"
            android:layout_gravity="bottom|right"
            android:background="@drawable/umeng_common_gradient_orange"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:alpha="0.6"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/tv_button_sms"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:clickable="false"
                android:focusable="false"
                android:gravity="center"
                android:text="评论"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_main_title"
                android:textStyle="bold" />
        </LinearLayout>

    </FrameLayout>

</LinearLayout>