<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wifi_louder_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/wifi_active_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/wifi_louder_show"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/wifi_louder_image"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:contentDescription="@null"
                    android:scaleType="centerCrop"
                    android:src="@drawable/naicha" />

                <TextView
                    android:id="@+id/wifi_louder_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:text="小天是我见过的最单纯善良的女孩"
                    android:textColor="@color/knock_question_click_color" />

                <LinearLayout
                    android:id="@+id/wifi_social"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/praise"
                        android:layout_width="40dp"
                        android:layout_height="20dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/umeng_common_gradient_orange"
                        android:gravity="center"
                        android:text="赞"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/private_contact"
                        android:layout_width="40dp"
                        android:layout_height="20dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/umeng_common_gradient_orange"
                        android:gravity="center"
                        android:text="私聊"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/comment_btn"
                        android:layout_width="40dp"
                        android:layout_height="20dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/umeng_common_gradient_orange"
                        android:gravity="center"
                        android:text="评论"
                        android:textColor="@color/white" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/comment_btn"
                            android:layout_width="40dp"
                            android:layout_height="20dp"
                            android:layout_margin="5dp"
                            android:background="@color/color_gray_white"
                            android:gravity="center"
                            android:text="分享"
                            android:textColor="@color/font_color_black" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/darkgray" />

            <ListView
                android:id="@+id/wifi_list_comments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:cacheColorHint="#00000000"
                android:fadingEdge="vertical" >
            </ListView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>