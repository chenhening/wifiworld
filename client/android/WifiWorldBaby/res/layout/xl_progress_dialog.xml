<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="334dp"
    android:layout_height="202dp"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical" >

    <!-- title&内容 -->

    <LinearLayout
        android:id="@+id/dlg_title_layout"
        android:layout_width="334dp"
        android:layout_height="42dp"
        android:gravity="left|center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/dlg_title"
            style="@style/dlg_title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="@string/tips"
            android:visibility="visible" />
    </LinearLayout>

    <!-- title&内容 -->

    <LinearLayout
        android:layout_width="334dp"
        android:layout_height="100dp"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/xl_dlg_pro_percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="0%"
            android:textColor="#01A9FA"
            android:textSize="20sp" >
        </TextView>

        <TextView
            android:id="@+id/xl_dlg_pro_hint"
            style="@style/dlg_content_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:paddingTop="15dp"
            android:singleLine="true"
            android:text="正在下载,请稍候..." >
        </TextView>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#E7E9EA" />

    <TextView
        android:id="@+id/tv_bottom_btn"
        style="@style/dlg_content_txt"
        android:layout_width="334dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="取消" />

</LinearLayout>