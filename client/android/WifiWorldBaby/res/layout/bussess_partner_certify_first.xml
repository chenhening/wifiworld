<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/certify_first_content"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <include layout="@layout/header_setting" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/color_main_bg" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dimen_65_dip"
                android:background="@drawable/bg_merchant_certify_introduce_repeat"
                android:paddingLeft="@dimen/dimen_15_dip"
                android:paddingRight="@dimen/dimen_15_dip"
                android:scaleType="center"
                android:src="@drawable/img_merchant_certify_first" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/person_cener_item_bg"
                android:orientation="vertical"
                android:visibility="visible" >

                <RelativeLayout
                    android:id="@+id/merchant_name_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/dimen_50_dip"
                    android:background="@drawable/sl_bg_person_center_item"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:paddingLeft="@dimen/dimen_15_dip"
                    android:paddingRight="@dimen/dimen_15_dip"
                    android:visibility="visible" >

                    <TextView
                        android:id="@+id/merchant_name_key_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:drawableLeft="@drawable/img_merchant_certify_mark"
                        android:drawablePadding="@dimen/dimen_5_dip"
                        android:text="商家名称"
                        android:textColor="@color/color_main_text"
                        android:textSize="@dimen/font_main_big" />

                    <EditText
                        android:id="@+id/merchant_name_value_text"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="@dimen/dimen_15_dip"
                        android:layout_toRightOf="@id/merchant_name_key_text"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="@string/merchant_certify_name"
                        android:maxLength="30"
                        android:singleLine="true"
                        android:textColor="@color/color_main_text"
                        android:textSize="@dimen/font_main_big" />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dimen_10_dip"
                android:paddingLeft="@dimen/dimen_14_dip"
                android:paddingRight="@dimen/dimen_15_dip"
                android:paddingTop="@dimen/dimen_5_dip"
                android:text="名称格式：品牌或字号名称+（分店名称）。例如：麦当劳（西直门店），不超过30个汉字。"
                android:textColor="@color/color_gray"
                android:textSize="@dimen/font_main_small" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_15_dip"
                android:background="@drawable/person_cener_item_bg"
                android:orientation="vertical"
                android:visibility="visible" >

                <RelativeLayout
                    android:id="@+id/merchant_address_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/dimen_50_dip"
                    android:background="@drawable/sl_bg_person_center_item"
                    android:paddingLeft="@dimen/dimen_15_dip"
                    android:paddingRight="@dimen/dimen_15_dip"
                    android:visibility="visible" >

                    <TextView
                        android:id="@+id/merchant_address_key_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:drawableLeft="@drawable/img_merchant_certify_mark"
                        android:drawablePadding="@dimen/dimen_5_dip"
                        android:text="商家地址"
                        android:textColor="@color/color_main_text"
                        android:textSize="@dimen/font_main_big" />

                    <ImageView
                        android:id="@+id/merchant_address_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingLeft="@dimen/dimen_5_dip"
                        android:paddingRight="@dimen/dimen_5_dip"
                        android:src="@drawable/sl_icon_location" />

                    <TextView
                        android:id="@+id/merchant_address_value_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dimen_15_dip"
                        android:layout_toLeftOf="@id/merchant_address_icon"
                        android:layout_toRightOf="@id/merchant_address_key_text"
                        android:ellipsize="end"
                        android:hint="@string/merchant_certify_address"
                        android:singleLine="true"
                        android:textColor="@color/color_high_light_blue"
                        android:textSize="@dimen/font_main_big" />
                </RelativeLayout>

                <View
                    android:id="@+id/merchant_detail_address_line"
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:layout_marginLeft="@dimen/dimen_15_dip"
                    android:layout_marginRight="@dimen/dimen_15_dip"
                    android:background="@color/color_line" />

                <RelativeLayout
                    android:id="@+id/merchant_detail_address_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/dimen_50_dip"
                    android:background="@drawable/sl_bg_person_center_item"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:paddingLeft="@dimen/dimen_15_dip"
                    android:paddingRight="@dimen/dimen_15_dip"
                    android:visibility="visible" >

                    <TextView
                        android:id="@+id/merchant_detail_address_key_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:drawableLeft="@drawable/img_merchant_certify_mark"
                        android:drawablePadding="@dimen/dimen_5_dip"
                        android:text="详细地址"
                        android:textColor="@color/color_main_text"
                        android:textSize="@dimen/font_main_big" />

                    <EditText
                        android:id="@+id/merchant_detail_address_value_text"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="@dimen/dimen_15_dip"
                        android:layout_toRightOf="@id/merchant_detail_address_key_text"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="@string/merchant_certify_detail_address"
                        android:maxLength="228"
                        android:singleLine="true"
                        android:textColor="@color/color_main_text"
                        android:textSize="@dimen/font_main_big" />
                </RelativeLayout>

                <View
                    android:id="@+id/merchant_type_line"
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:layout_marginLeft="@dimen/dimen_15_dip"
                    android:layout_marginRight="@dimen/dimen_15_dip"
                    android:background="@color/color_line" />

                <RelativeLayout
                    android:id="@+id/merchant_type_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/dimen_50_dip"
                    android:background="@drawable/sl_bg_person_center_item"
                    android:paddingLeft="@dimen/dimen_15_dip"
                    android:paddingRight="@dimen/dimen_15_dip"
                    android:visibility="visible" >

                    <TextView
                        android:id="@+id/merchant_type_key_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:drawableLeft="@drawable/img_merchant_certify_mark"
                        android:drawablePadding="@dimen/dimen_5_dip"
                        android:text="商家类型"
                        android:textColor="@color/color_main_text"
                        android:textSize="@dimen/font_main_big" />

                    <TextView
                        android:id="@+id/merchant_type_value_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dimen_15_dip"
                        android:layout_toRightOf="@id/merchant_type_key_text"
                        android:background="@null"
                        android:hint="@string/merchant_certify_type"
                        android:textColor="@color/color_main_text"
                        android:textSize="@dimen/font_main_big" />

                    <ImageView
                        android:id="@+id/merchant_type_next"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/icon_next_selector" />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dimen_10_dip"
                android:paddingLeft="@dimen/dimen_14_dip"
                android:paddingRight="@dimen/dimen_15_dip"
                android:paddingTop="@dimen/dimen_5_dip"
                android:text="商家类型应与营业执照上的经营范围对应"
                android:textColor="@color/color_gray"
                android:textSize="@dimen/font_main_small" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5_dip"
                android:background="@drawable/person_cener_item_bg"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dimen_12_dip" >

                <TextView
                    android:id="@+id/merchant_photo_name"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_40_dip"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/dimen_14_dip"
                    android:drawableLeft="@drawable/img_merchant_certify_mark"
                    android:drawablePadding="@dimen/dimen_5_dip"
                    android:gravity="center_vertical"
                    android:text="商家照片"
                    android:textColor="@color/color_main_text"
                    android:textSize="@dimen/font_main_big" />

                <ImageView
                    android:id="@+id/merchant_photo"
                    android:layout_width="@dimen/dimen_130_dip"
                    android:layout_height="@dimen/dimen_105_dip"
                    android:layout_alignLeft="@id/merchant_photo_name"
                    android:layout_below="@id/merchant_photo_name"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sl_btn_merchant_photo" />

                <TextView
                    android:id="@+id/merchant_photo_name_example"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_40_dip"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/dimen_30_dip"
                    android:layout_toRightOf="@id/merchant_photo"
                    android:gravity="center_vertical"
                    android:text="图例"
                    android:textColor="@color/color_main_text"
                    android:textSize="@dimen/font_main_big" />

                <ImageView
                    android:id="@+id/merchant_photo_example"
                    android:layout_width="@dimen/dimen_130_dip"
                    android:layout_height="@dimen/dimen_105_dip"
                    android:layout_alignLeft="@id/merchant_photo_name_example"
                    android:layout_below="@id/merchant_photo_name_example"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_merchant_photo_example" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_15_dip"
                android:background="@drawable/person_cener_item_bg"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/merchant_produce_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sl_bg_person_center_item"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:paddingLeft="@dimen/dimen_15_dip"
                    android:paddingRight="@dimen/dimen_15_dip"
                    android:visibility="visible" >

                    <TextView
                        android:id="@+id/merchant_produce_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="@dimen/dimen_8_dip"
                        android:drawableLeft="@drawable/img_merchant_certify_mark"
                        android:drawablePadding="@dimen/dimen_5_dip"
                        android:text="商家介绍"
                        android:textColor="@color/color_main_text"
                        android:textSize="@dimen/font_main_big" />

                    <ImageView
                        android:id="@+id/merchant_produce_divice"
                        android:layout_width="fill_parent"
                        android:layout_height="1.0px"
                        android:layout_below="@id/merchant_produce_name"
                        android:layout_marginTop="@dimen/dimen_8_dip"
                        android:background="@color/color_line" />

                    <EditText
                        android:id="@+id/merchant_produce_content"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/merchant_produce_divice"
                        android:layout_marginTop="@dimen/dimen_5_dip"
                        android:background="@null"
                        android:gravity="top|left|center"
                        android:hint="请输入商家介绍"
                        android:maxLength="200"
                        android:minLines="5"
                        android:textColor="@color/color_main_text"
                        android:textSize="@dimen/font_main_big" />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingBottom="@dimen/dimen_10_dip"
                android:paddingLeft="@dimen/dimen_14_dip"
                android:paddingRight="@dimen/dimen_15_dip"
                android:paddingTop="@dimen/dimen_5_dip"
                android:text="限200个字"
                android:textColor="@color/color_gray"
                android:textSize="@dimen/font_main_small" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>