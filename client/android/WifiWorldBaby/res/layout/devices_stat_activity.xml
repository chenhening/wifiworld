<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:id="@+id/root"
    android:orientation="vertical" >
    <include layout="@layout/header_setting" />
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/totalCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="总速度 (共2台矿机工作中)"
            android:textColor="#3d3d3d"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/totalSpeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp"
            android:layout_toLeftOf="@+id/ds_kbps"
            android:text="5110"
            android:textColor="#ca2525"
            android:textSize="22sp" >
        </TextView>

        <TextView
            android:id="@+id/ds_kbps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/totalSpeed"
            android:layout_alignParentRight="true"
            android:layout_marginRight="17.3dp"
            android:text="Kbps"
            android:textColor="#636363"
            android:textSize="15sp" >
        </TextView>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="#d6d6d6" />

    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="#e9e9e9"
        android:dividerHeight="@dimen/divider_height"
        android:listSelector="@android:color/transparent" >
    </ListView>

</LinearLayout>