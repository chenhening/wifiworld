<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <include layout="@layout/header_setting" />

    <LinearLayout
        android:id="@+id/sl_profile"
        android:layout_width="match_parent"
        android:layout_height="275dp"
        android:background="@drawable/splash_bg"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/image_userprofile"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:contentDescription="@string/app_name"
            android:src="@drawable/tab_mine_nor" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:id="@+id/sl_login"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:background="@drawable/splash_bg"
                android:orientation="vertical" >

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="37dp"
                    android:layout_marginRight="37dp"
                    android:layout_marginTop="20dp" >

                    <EditText
                        android:id="@+id/tv_login_account"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:background="#00000000"
                        android:gravity="left|center_vertical"
                        android:hint="@string/login_account"
                        android:imeOptions="actionNext"
                        android:inputType="phone|textUri"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/login_tv_txt"
                        android:textColorHint="@color/white"
                        android:textSize="17sp" />

                    <Button
                        android:id="@+id/bt_clear_login_account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:background="@drawable/login_edit_text_clear_btn_selector"
                        android:visibility="invisible" />
                </FrameLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="37dp"
                    android:layout_marginRight="37dp"
                    android:background="@drawable/login_line"
                    android:contentDescription="@string/app_name" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="37dp"
                    android:layout_marginRight="37dp"
                    android:layout_marginTop="11dp" >

                    <EditText
                        android:id="@+id/tv_login_sms"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.3"
                        android:background="#00000000"
                        android:gravity="left|center_vertical"
                        android:hint="@string/sms_check_num"
                        android:imeOptions="actionDone"
                        android:inputType="number|textPassword"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/login_tv_txt"
                        android:textColorHint="@color/white"
                        android:textSize="17sp" />

                    <LinearLayout
                        android:id="@+id/button_sms"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.7"
                        android:background="@drawable/login_bottom_btn_selector"
                        android:gravity="center_vertical" >

                        <TextView
                            android:id="@+id/tv_button_sms"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:focusable="false"
                            android:text="@string/smschecknum"
                            android:textColor="#E22B2B"
                            android:textSize="19sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="1dp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="37dp"
                    android:background="@drawable/login_line"
                    android:contentDescription="@string/app_name" />
                <!-- android:layout_marginRight="37dp" -->

                <LinearLayout
                    android:id="@+id/button_login"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/login_bottom_btn_selector"
                    android:gravity="center"
                    android:minHeight="39dp" >

                    <TextView
                        android:id="@+id/tv_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:focusable="false"
                        android:text="@string/login_login"
                        android:textColor="#E22B2B"
                        android:textSize="19sp"
                        android:textStyle="bold" />

                    <com.anynet.wifiworld.view.AnimationDot
                        android:id="@+id/login_animation_dot"
                        android:layout_width="20dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dip"
                        android:clickable="false"
                        android:gravity="left|bottom"
                        android:textColor="#E22B2B"
                        android:textSize="19sp"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sl_usersys"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:background="@drawable/splash_bg"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/wifi_provider"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="37dp"
                    android:layout_marginRight="37dp"
                    android:layout_marginTop="11dp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/id_locked" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/wifi_provider"
                        android:textSize="19sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/wifi_user"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="37dp"
                    android:layout_marginRight="37dp"
                    android:layout_marginTop="11dp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/id_default" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/wifi_user"
                        android:textSize="19sp" />
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <include layout="@layout/framme_buttom" />

</LinearLayout>