<?xml version="1.0" encoding="utf-8"?>  
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitesmoke"
    android:orientation="vertical"
    android:paddingRight="20dp" >
  
    <View  
        android:id="@+id/view_0"  
        android:layout_width="1dp"  
        android:layout_height="25dp"    
        android:layout_marginLeft="71dp"  
        android:background="#A6A6A6" />  
  
    <View  
        android:id="@+id/view_1"  
        android:layout_width="1dp"  
        android:layout_height="25dp"   
        android:layout_marginLeft="71dp"  
        android:background="#A6A6A6" />  
  
    <TextView
        android:id="@+id/show_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/view_0"
        android:layout_below="@+id/view_1"
        android:maxLines="2"
        android:text="测试数据"
        android:textSize="12dp" />
  
    <View
        android:id="@+id/view_2"
        android:layout_width="1dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/relative"
        android:layout_alignLeft="@+id/image"
        android:layout_below="@+id/image"
        android:background="#A6A6A6" />

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_0"
        android:layout_toRightOf="@+id/image"
        android:background="@drawable/device_state_pause"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/image_1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/about_icon_privacy" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/image_1"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/image_1"
            android:layout_toRightOf="@+id/image_1"
            android:ellipsize="end"
            android:maxEms="40"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:text="测试数据"
            android:textSize="12sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/image"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignLeft="@+id/view_0"
        android:layout_alignTop="@+id/show_time"
        android:background="@drawable/cryatal_notice_trumpet" />
  
</RelativeLayout> 