<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
 
    <style name="dlg_title_txt">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#464647</item>
        <item name="android:singleLine">true</item>
    </style>

      <!-- 弹窗内容文字 -->
    <style name="dlg_content_txt">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#464647</item>
    </style>
    
    
     <!-- 弹窗左button -->
    <style name="dlg_left_button_txt">
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/xl_dlg_btn_selecotr</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#464647</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <!-- 弹窗右button -->
    <style name="dlg_right_button_txt">
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/xl_dlg_btn_selecotr</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#CA2525</item>
        <item name="android:layout_height">50dp</item>
    </style>
    
        <!-- 弹窗底部单个button -->
    <style name="dlg_single_button_txt">
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/xl_dlg_btn_selecotr</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#464647</item>
    </style>
    
     <!-- 公用弹窗style -->
    <style name="bt_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
        <!-- add by mayuan -->
        <item name="android:windowFullscreen">true</item>
    </style>
    
    
        <style name="unified_loading_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <!-- 模糊 -->
        <!-- add by mayuan -->
        <item name="android:windowFullscreen">true</item>
    </style>
    

</resources>
