<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="334dp"
    android:layout_height="202dp"
    android:layout_gravity="center"
    android:background="@drawable/radius_shape"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="334dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:minHeight="100dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp" >

        <TextView
            android:id="@+id/dlg_content"
            style="@style/dlg_content_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="content" />
    </LinearLayout>

    <!-- 双btn -->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E7E9EA" />

    <LinearLayout
        android:id="@+id/dlg_2btn_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="2" >

        <TextView
            android:id="@+id/dlg_left_btn"
            style="@style/dlg_right_button_txt"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消" />

        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#E7E9EA" />

        <TextView
            android:id="@+id/dlg_right_btn"
            style="@style/dlg_left_button_txt"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定" />
    </LinearLayout>

</LinearLayout>