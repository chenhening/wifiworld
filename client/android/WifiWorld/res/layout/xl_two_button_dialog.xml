<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="334dp"
    android:layout_height="202dp"
    android:layout_gravity="center"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical" >

    <!-- title&内容 -->

    <LinearLayout
        android:id="@+id/dlg_title_layout"
        android:layout_width="334dp"
        android:layout_height="30dp"
        android:gravity="left|center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/dlg_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="@string/tips"
            style="@style/dlg_title_txt"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="334dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:minHeight="100dp" >

        <TextView
            android:id="@+id/dlg_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/dlg_content_txt"
            android:text="contentxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx" />
    </LinearLayout>

    <!-- 双btn -->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E7E9EA" />

    <LinearLayout
        android:id="@+id/dlg_2btn_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="2" >

        <TextView
            android:id="@+id/dlg_left_btn"
            style="@style/dlg_left_button_txt"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消" />

        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#E7E9EA" />

        <TextView
            android:id="@+id/dlg_right_btn"
            style="@style/dlg_right_button_txt"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定" />
    </LinearLayout>

</LinearLayout>