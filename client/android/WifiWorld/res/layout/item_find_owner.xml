<?xml version="1.0" encoding="utf-8"?>  
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitesmoke"
    android:orientation="vertical"
    android:paddingRight="20dp" >
  
    <View  
        android:id="@+id/view_0"  
        android:layout_width="1dp"  
        android:layout_height="25dp"    
        android:layout_marginLeft="71dp"  
        android:background="#A6A6A6" />  
  
    <View  
        android:id="@+id/view_1"  
        android:layout_width="1dp"  
        android:layout_height="25dp"   
        android:layout_marginLeft="71dp"  
        android:background="#A6A6A6" />  
  
    <TextView
        android:id="@+id/show_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/view_0"
        android:layout_below="@+id/view_1"
        android:background="@drawable/btn_notice_go_normal"
        android:maxLines="2"
        android:text="测试数据"
        android:textSize="12dp" />
  
    <View
        android:id="@+id/view_2"
        android:layout_width="1dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/relative"
        android:layout_alignLeft="@+id/image"
        android:layout_below="@+id/image"
        android:background="#A6A6A6" />

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_0"
        android:layout_toRightOf="@+id/image"
        android:background="@drawable/btn_green_press"
        android:padding="1dp" >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/image_1"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/image_1"
            android:layout_toRightOf="@+id/image_1"
            android:maxLength="60"
            android:maxLines="4"
            android:paddingLeft="1dp"
            android:singleLine="true"
            android:text="测试数据"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/image_1"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/about_icon_privacy" />

        <TextView
            android:id="@+id/tv_clues_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/image_1"
            android:layout_alignRight="@+id/title"
            android:layout_below="@+id/title"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:maxLines="2"
            android:text="地点："
            android:textSize="10sp"
            android:textStyle="italic" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/image"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignLeft="@+id/view_0"
        android:layout_alignTop="@+id/show_time"
        android:background="@drawable/cryatal_notice_trumpet" />
  
</RelativeLayout> 