<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/certify_second_content"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <include layout="@layout/header_setting" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/color_main_bg" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dimen_65_dip"
                android:background="@drawable/bg_merchant_certify_introduce_repeat"
                android:paddingLeft="@dimen/dimen_15_dip"
                android:paddingRight="@dimen/dimen_15_dip"
                android:scaleType="center"
                android:src="@drawable/img_merchant_certify_third" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/yellow"
                android:paddingBottom="@dimen/dimen_10_dip"
                android:paddingLeft="@dimen/dimen_14_dip"
                android:paddingRight="@dimen/dimen_15_dip"
                android:paddingTop="@dimen/dimen_5_dip"
                android:text="@string/str_wifi_provider_person_warning"
                android:textColor="@color/color_gray"
                android:textSize="@dimen/font_main_small" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_15_dip"
                android:background="@drawable/person_cener_item_bg"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/merchant_contact_name_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/dimen_50_dip"
                    android:background="@drawable/sl_bg_person_center_item"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:paddingLeft="@dimen/dimen_15_dip"
                    android:paddingRight="@dimen/dimen_15_dip"
                    android:visibility="visible" >

                    <TextView
                        android:id="@+id/merchant_contact_name_key_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:drawableLeft="@drawable/img_merchant_certify_mark"
                        android:drawablePadding="@dimen/dimen_5_dip"
                        android:text="联系人    "
                        android:textColor="@color/color_main_text"
                        android:textSize="@dimen/font_main_big" />

                    <EditText
                        android:id="@+id/merchant_contact_name_value_text"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="@dimen/dimen_15_dip"
                        android:layout_toRightOf="@+id/merchant_contact_name_key_text"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="@string/merchant_certify_contact_name"
                        android:maxLength="15"
                        android:singleLine="true"
                        android:textColor="@color/color_main_text"
                        android:textSize="@dimen/font_main_big" />
                </RelativeLayout>

                <View
                    android:id="@+id/merchant_phone_line"
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:layout_marginLeft="@dimen/dimen_15_dip"
                    android:layout_marginRight="@dimen/dimen_15_dip"
                    android:background="@color/color_line" />

                <RelativeLayout
                    android:id="@+id/merchant_contact_phone_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/dimen_50_dip"
                    android:background="@drawable/sl_bg_person_center_item"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:paddingLeft="@dimen/dimen_15_dip"
                    android:paddingRight="@dimen/dimen_15_dip"
                    android:visibility="visible" >

                    <TextView
                        android:id="@+id/merchant_contact_phone_key_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:drawableLeft="@drawable/img_merchant_certify_mark"
                        android:drawablePadding="@dimen/dimen_5_dip"
                        android:text="手机号码"
                        android:textColor="@color/color_main_text"
                        android:textSize="@dimen/font_main_big" />

                    <EditText
                        android:id="@+id/merchant_contact_phone_value_text"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="@dimen/dimen_15_dip"
                        android:layout_toRightOf="@+id/merchant_contact_phone_key_text"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="@string/merchant_certify_contact_phone"
                        android:inputType="phone"
                        android:maxLength="11"
                        android:textColor="@color/color_main_text"
                        android:textSize="@dimen/font_main_big" />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dimen_14_dip"
                android:paddingRight="@dimen/dimen_15_dip"
                android:paddingTop="@dimen/dimen_5_dip"
                android:text="留下您的姓名与手机号，方便我们与您确认。您的个人信息会被严格保密，不会被公开，请放心填写"
                android:textColor="@color/color_gray"
                android:textSize="@dimen/font_main_small" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_15_dip"
                android:background="@drawable/person_cener_item_bg"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/merchant_tel_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/dimen_50_dip"
                    android:background="@drawable/sl_bg_person_center_item"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:paddingLeft="@dimen/dimen_15_dip"
                    android:paddingRight="@dimen/dimen_15_dip"
                    android:visibility="visible" >

                    <TextView
                        android:id="@+id/merchant_tel_key_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:drawableLeft="@drawable/img_merchant_certify_mark"
                        android:drawablePadding="@dimen/dimen_5_dip"
                        android:text="应急座机"
                        android:textColor="@color/color_main_text"
                        android:textSize="@dimen/font_main_big" />

                    <EditText
                        android:id="@+id/merchant_tel_areacode_text"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="@dimen/dimen_15_dip"
                        android:layout_toRightOf="@+id/merchant_tel_key_text"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="区号"
                        android:inputType="phone"
                        android:maxLength="4"
                        android:singleLine="true"
                        android:textColor="@color/color_main_text"
                        android:textSize="@dimen/font_main_big" />

                    <EditText
                        android:id="@+id/merchant_tel_divider"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="@dimen/dimen_15_dip"
                        android:layout_marginRight="@dimen/dimen_15_dip"
                        android:layout_toRightOf="@+id/merchant_tel_areacode_text"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="-"
                        android:textColor="@color/color_main_text"
                        android:textSize="@dimen/font_main_big" />

                    <EditText
                        android:id="@+id/merchant_tel_text"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_toRightOf="@+id/merchant_tel_divider"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="座机电话"
                        android:inputType="phone"
                        android:singleLine="true"
                        android:textColor="@color/color_main_text"
                        android:textSize="@dimen/font_main_big" />
                </RelativeLayout>

                <View
                    android:id="@+id/merchant_other_tel_line"
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:layout_marginLeft="@dimen/dimen_15_dip"
                    android:layout_marginRight="@dimen/dimen_15_dip"
                    android:background="@color/color_line" />

                <RelativeLayout
                    android:id="@+id/merchant_other_tel_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/dimen_50_dip"
                    android:background="@drawable/sl_bg_person_center_item"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:paddingLeft="@dimen/dimen_15_dip"
                    android:paddingRight="@dimen/dimen_15_dip"
                    android:visibility="visible" >

                    <TextView
                        android:id="@+id/merchant_other_tel_key_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="               或"
                        android:textColor="@color/color_main_text"
                        android:textSize="@dimen/font_main_big" />

                    <EditText
                        android:id="@+id/merchant_other_tel_value_text"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="@dimen/dimen_15_dip"
                        android:layout_toRightOf="@+id/merchant_other_tel_key_text"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="手机号或400电话"
                        android:inputType="phone"
                        android:maxLength="11"
                        android:textColor="@color/color_main_text"
                        android:textSize="@dimen/font_main_big" />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dimen_14_dip"
                android:paddingRight="@dimen/dimen_15_dip"
                android:paddingTop="@dimen/dimen_5_dip"
                android:text="座机、手机、400/800电话均可，座机要有区号。\n电话将公开给联连用户，请确保电话可以接通， 建议填写客服或前台电话。\n如电话无法接通将不能审核通过"
                android:textColor="@color/color_gray"
                android:textSize="@dimen/font_main_small" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>