<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/certify_first_content"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/common_bg"
    android:orientation="vertical" >

    <include layout="@layout/header_setting" />

    <com.anynet.wifiworld.view.ReboundScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="15dp"
        android:scrollbarAlwaysDrawVerticalTrack="false"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_person_center"
                android:gravity="center"
                android:paddingLeft="@dimen/dimen_15_dip"
                android:paddingRight="@dimen/dimen_15_dip"
                android:scaleType="center" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_provider_flow_circle"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="第一步"
                        android:textColor="@color/app_color_style"
                        android:textColorLink="@color/app_color_style"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="完善信息"
                        android:textColor="@color/app_color_style"
                        android:textSize="12sp" />

                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/icon_provider_flow_next" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/bg_provider_flow_circle"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="第二步"
                        android:textColor="@color/grey"
                        android:textColorLink="@color/app_color_style"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="提交信息"
                        android:textColor="@color/grey"
                        android:textSize="12sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/dimen_10_dip"
                    android:paddingLeft="@dimen/dimen_14_dip"
                    android:paddingRight="@dimen/dimen_15_dip"
                    android:paddingTop="@dimen/dimen_5_dip"
                    android:text="@string/str_wifi_provider_password_desc"
                    android:textColor="@color/app_color_style" />

                <RelativeLayout
                    android:id="@+id/rl_wifi_provider_ssid"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/dimen_50_dip"
                    android:background="@color/font_color_write"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:paddingLeft="@dimen/dimen_15_dip"
                    android:paddingRight="@dimen/dimen_15_dip"
                    android:visibility="visible" >

                    <TextView
                        android:id="@+id/tv_wifi_provider_ssid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:drawableLeft="@drawable/ic_detail_comments_logo"
                        android:drawablePadding="@dimen/dimen_5_dip"
                        android:text="@string/str_wifi_provider_ssid"
                        android:textColor="@color/color_main_text"
                        android:textSize="@dimen/font_main_big" />

                    <TextView
                        android:id="@+id/et_wifi_provider_ssid"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="@dimen/dimen_15_dip"
                        android:layout_toRightOf="@+id/tv_wifi_provider_ssid"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="@string/str_wifi_ssid_ongetting"
                        android:maxLength="30"
                        android:singleLine="true"
                        android:textColor="@color/color_main_text"
                        android:textSize="@dimen/font_main_big" >

                        <requestFocus />
                    </TextView>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_wifi_provider_password"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/dimen_50_dip"
                    android:layout_marginTop="1dp"
                    android:background="@color/font_color_write"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:paddingLeft="@dimen/dimen_15_dip"
                    android:paddingRight="@dimen/dimen_15_dip"
                    android:visibility="visible" >

                    <TextView
                        android:id="@+id/tv_wifi_provider_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:drawableLeft="@drawable/ic_detail_comments_logo"
                        android:drawablePadding="@dimen/dimen_5_dip"
                        android:text="@string/str_wifi_provider_password"
                        android:textColor="@color/color_main_text"
                        android:textSize="@dimen/font_main_big" />

                    <EditText
                        android:id="@+id/et_wifi_provider_password"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="@dimen/dimen_15_dip"
                        android:layout_toRightOf="@+id/tv_wifi_provider_password"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="@string/str_wifi_provider_password_hint1"
                        android:inputType="textPassword"
                        android:minEms="8"
                        android:singleLine="true"
                        android:textColor="@color/color_main_text"
                        android:textSize="@dimen/font_main_big" />
                </RelativeLayout>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:paddingBottom="@dimen/dimen_10_dip"
                    android:paddingLeft="@dimen/dimen_14_dip"
                    android:paddingRight="@dimen/dimen_15_dip"
                    android:paddingTop="@dimen/dimen_5_dip"
                    android:text="@string/str_wifi_provider_alias_detail"
                    android:textColor="@color/app_color_style" />

                <RelativeLayout
                    android:id="@+id/rl_wifi_provider_alias"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/dimen_50_dip"
                    android:layout_marginTop="1dp"
                    android:background="@color/font_color_write"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:paddingLeft="@dimen/dimen_15_dip"
                    android:paddingRight="@dimen/dimen_15_dip" >

                    <TextView
                        android:id="@+id/tv_wifi_provider_alias"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:drawableLeft="@drawable/ic_detail_comments_logo"
                        android:drawablePadding="@dimen/dimen_5_dip"
                        android:text="网络名称"
                        android:textColor="@color/color_main_text"
                        android:textSize="@dimen/font_main_big" />

                    <EditText
                        android:id="@+id/et_wifi_provider_alias"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="@dimen/dimen_15_dip"
                        android:layout_toRightOf="@id/tv_wifi_provider_alias"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="@string/str_wifi_provider_alias"
                        android:maxEms="20"
                        android:maxLength="8"
                        android:singleLine="true"
                        android:textColor="@color/color_main_text"
                        android:textSize="@dimen/font_main_big" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_15_dip"
                android:orientation="vertical"
                android:visibility="visible" >

                <RelativeLayout
                    android:id="@+id/merchant_address_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/dimen_50_dip"
                    android:background="@color/font_color_write"
                    android:paddingLeft="@dimen/dimen_15_dip"
                    android:paddingRight="@dimen/dimen_15_dip"
                    android:visibility="visible" >

                    <TextView
                        android:id="@+id/tv_wifi_provider_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:drawableLeft="@drawable/ic_detail_comments_logo"
                        android:drawablePadding="@dimen/dimen_5_dip"
                        android:text="@string/str_wifi_provider_location"
                        android:textColor="@color/color_main_text"
                        android:textSize="@dimen/font_main_big" />

                    <ImageView
                        android:id="@+id/img_wifi_provider_location_click"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingLeft="@dimen/dimen_5_dip"
                        android:paddingRight="@dimen/dimen_5_dip"
                        android:src="@drawable/sl_icon_location" />

                    <TextView
                        android:id="@+id/tv_wifi_provider_location_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dimen_15_dip"
                        android:layout_toLeftOf="@id/img_wifi_provider_location_click"
                        android:layout_toRightOf="@id/tv_wifi_provider_location"
                        android:ellipsize="end"
                        android:hint="@string/str_wifi_provider_location_hint"
                        android:singleLine="true"
                        android:textSize="@dimen/font_main_big" />
                </RelativeLayout>

                <View
                    android:id="@+id/merchant_detail_address_line"
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:layout_marginLeft="@dimen/dimen_15_dip"
                    android:layout_marginRight="@dimen/dimen_15_dip"
                    android:background="@color/color_line" />

                <RelativeLayout
                    android:id="@+id/merchant_detail_address_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/dimen_50_dip"
                    android:background="@color/font_color_write"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:paddingLeft="@dimen/dimen_15_dip"
                    android:paddingRight="@dimen/dimen_15_dip"
                    android:visibility="visible" >

                    <TextView
                        android:id="@+id/tv_wifi_provider_detail_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:drawableLeft="@drawable/ic_detail_comments_logo"
                        android:drawablePadding="@dimen/dimen_5_dip"
                        android:text="@string/str_wifi_provider_detail_location"
                        android:textColor="@color/color_main_text"
                        android:textSize="@dimen/font_main_big" />

                    <EditText
                        android:id="@+id/et_wifi_provider_detail_address"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="@dimen/dimen_15_dip"
                        android:layout_toRightOf="@id/tv_wifi_provider_detail_location"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="@string/str_wifi_provider_detail_hint"
                        android:maxLength="228"
                        android:singleLine="true"
                        android:textColor="@color/color_main_text"
                        android:textSize="@dimen/font_main_big" />
                </RelativeLayout>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/dimen_10_dip"
                    android:paddingLeft="@dimen/dimen_14_dip"
                    android:paddingRight="@dimen/dimen_15_dip"
                    android:paddingTop="@dimen/dimen_5_dip"
                    android:text="@string/str_wifi_provider_type_desc"
                    android:textColor="@color/app_color_style" />

                <View
                    android:id="@+id/merchant_type_line"
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:layout_marginLeft="@dimen/dimen_15_dip"
                    android:layout_marginRight="@dimen/dimen_15_dip"
                    android:background="@color/color_line" />

                <RelativeLayout
                    android:id="@+id/merchant_type_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/dimen_50_dip"
                    android:background="@color/font_color_write"
                    android:paddingLeft="@dimen/dimen_15_dip"
                    android:paddingRight="@dimen/dimen_15_dip"
                    android:visibility="visible" >

                    <TextView
                        android:id="@+id/tv_wifi_provider_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:drawablePadding="@dimen/dimen_5_dip"
                        android:text="@string/str_wifi_provider_type_txt"
                        android:textColor="@color/color_main_text"
                        android:textSize="@dimen/font_main_big" />

                    <Spinner
                        android:id="@+id/sp_wifi_provider_type_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dimen_15_dip"
                        android:layout_toRightOf="@id/tv_wifi_provider_type"
                        android:background="@null" />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dimen_10_dip"
                android:paddingLeft="@dimen/dimen_14_dip"
                android:paddingRight="@dimen/dimen_15_dip"
                android:paddingTop="@dimen/dimen_5_dip"
                android:text="@string/str_wifi_provider_logo_hint"
                android:textColor="@color/app_color_style" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/dimen_5_dip"
                android:layout_weight="1"
                android:background="@color/font_color_write"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dimen_12_dip" >

                <TextView
                    android:id="@+id/merchant_photo_name"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_40_dip"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/dimen_14_dip"
                    android:drawableLeft="@drawable/ic_detail_comments_logo"
                    android:drawablePadding="@dimen/dimen_5_dip"
                    android:gravity="center_vertical"
                    android:text="@string/str_wifi_provider_logo"
                    android:textColor="@color/color_main_text"
                    android:textSize="@dimen/font_main_big" />

                <ImageView
                    android:id="@+id/img_wifi_provider_logo"
                    android:layout_width="@dimen/dimen_64_dip"
                    android:layout_height="@dimen/dimen_64_dip"
                    android:layout_alignLeft="@id/merchant_photo_name"
                    android:layout_alignRight="@+id/merchant_photo_name"
                    android:layout_below="@id/merchant_photo_name"
                    android:src="@drawable/ic_provider_add_logo" />

                <TextView
                    android:id="@+id/merchant_photo_name_example"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_40_dip"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/dimen_30_dip"
                    android:layout_toRightOf="@id/img_wifi_provider_logo"
                    android:gravity="center_vertical"
                    android:text="预览效果"
                    android:textColor="@color/color_main_text"
                    android:textSize="@dimen/font_main_big" />

                <ImageView
                    android:id="@+id/img_wifi_provider_logo_preview"
                    android:layout_width="@dimen/dimen_64_dip"
                    android:layout_height="@dimen/dimen_64_dip"
                    android:layout_alignLeft="@id/merchant_photo_name_example"
                    android:layout_below="@id/merchant_photo_name_example"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_launcher" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_15_dip"
                android:background="@color/font_color_write"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/merchant_produce_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:paddingLeft="@dimen/dimen_15_dip"
                    android:paddingRight="@dimen/dimen_15_dip"
                    android:visibility="visible" >

                    <TextView
                        android:id="@+id/merchant_produce_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="@dimen/dimen_8_dip"
                        android:drawableLeft="@drawable/ic_detail_comments_logo"
                        android:drawablePadding="@dimen/dimen_5_dip"
                        android:text="网络简介"
                        android:textColor="@color/color_main_text"
                        android:textSize="@dimen/font_main_big" />

                    <ImageView
                        android:id="@+id/merchant_produce_divice"
                        android:layout_width="fill_parent"
                        android:layout_height="1.0px"
                        android:layout_below="@id/merchant_produce_name"
                        android:layout_marginTop="@dimen/dimen_8_dip"
                        android:background="@color/color_line" />

                    <EditText
                        android:id="@+id/et_wifi_provider_desc_content"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/merchant_produce_divice"
                        android:layout_marginTop="@dimen/dimen_5_dip"
                        android:gravity="top|left|center"
                        android:hint="@string/str_wifi_provider_detail_desc_hint"
                        android:maxLength="30"
                        android:maxLines="2"
                        android:minLines="1"
                        android:textColor="@color/color_main_text"
                        android:textSize="@dimen/font_main_big" />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingBottom="@dimen/dimen_10_dip"
                android:paddingLeft="@dimen/dimen_14_dip"
                android:paddingRight="@dimen/dimen_15_dip"
                android:paddingTop="@dimen/dimen_5_dip"
                android:text="限30字" />
        </LinearLayout>
    </com.anynet.wifiworld.view.ReboundScrollView>

</LinearLayout>