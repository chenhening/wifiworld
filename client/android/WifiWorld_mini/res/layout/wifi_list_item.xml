<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_wifi_listitem"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@drawable/wifi_free_item0"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingLeft="20dp"
    android:paddingTop="10dp" >

    <ImageView
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:contentDescription="@string/content_description"
        android:src="@drawable/wifi_free_signal3" />

    <LinearLayout
        android:layout_width="160dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="40dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_wifi_free_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="Guest"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_wifi_free_item_options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:maxLines="1"
            android:text="No passport"
            android:textColor="@color/grey"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
	    android:id="@+id/ll_wifi_item_more"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center|right"
	    android:gravity="right"
	    android:orientation="horizontal" >
        
	    <ImageView
	        android:id="@+id/iv_wifi_item_more"
	        android:layout_width="30dp"
	        android:layout_height="30dp"
	        android:layout_marginRight="10dp"
	        android:src="@drawable/wifi_item_more" />
	</LinearLayout>
</LinearLayout>