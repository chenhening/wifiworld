<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_wifi_listitem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/wifi_free_item0"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/iv_wifi_item_logo"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="30dp"
        android:src="@drawable/wifi_free_signal3" />

    <LinearLayout
        android:id="@+id/ll_wifi_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="24dp"
        android:background="@drawable/an_dlg_btn_selecotr"
        android:gravity="left|center"
        android:orientation="vertical"
        android:paddingLeft="10dp" >

        <LinearLayout
            android:id="@+id/wifi_name_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_wifi_free_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="我家的网络我做主"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_wifi_free_item_alias"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="2dp"
                android:maxLines="1"
                android:text="[Guest]"
                android:textColor="@color/grey"
                android:textSize="10sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_wifi_free_item_options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:maxLines="1"
            android:text="No passport"
            android:textColor="@color/grey"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
	    android:id="@+id/ll_wifi_item_more"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center|right"
	    android:gravity="right"
	    android:orientation="horizontal"
	    android:visibility="gone" >
        
	    <ImageView
	        android:id="@+id/iv_wifi_item_more"
	        android:layout_width="30dp"
	        android:layout_height="30dp"
	        android:layout_marginRight="10dp"
	        android:src="@drawable/wifi_item_more" />
	</LinearLayout>
</LinearLayout>